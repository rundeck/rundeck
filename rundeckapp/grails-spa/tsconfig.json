{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["*"],
        },
    },
    "include": [
        "./src/**/*",
        "node_modules/@rundeck/ui-trellis"
    ],
    "exclude": [
        "./build/**/*"
    ]
}
