{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["webpack-env", "jest", "node"],
    "paths": {
      "@": ["./src"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "noImplicitAny": false
  },
  "include": [
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/app/**/*.vue",
    "src/library/**/*.vue",
    "src/library/**/*.ts",
    "src/library/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/library/stories",
    "src/library/components",
    "src/**/**/*.spec.ts",
    "src/**/**/*.stories.tsx",
    "node_modules"
  ]
}
