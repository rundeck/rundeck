{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["webpack-env", "jest", "node", "vue", "./src/vue-i18n"], 
    "paths": {
      "@/*": ["./src/*"],
      // Add explicit path mappings for imports
      "src/*": ["./src/*"],
      "library/*": ["./src/library/*"],
      "app/*": ["./src/app/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "noImplicitAny": false,
    // Add Vue-specific compiler options
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/app/**/*.vue",
    "src/library/**/*.vue",
    "src/library/**/*.ts",
    "src/library/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/library/stories",
    "src/library/components",
    "src/**/**/*.spec.ts",
    "src/**/**/*.test.ts",
    "src/**/**/*.stories.tsx",
    "node_modules",
    "src/**/node_modules",

  ]
}
