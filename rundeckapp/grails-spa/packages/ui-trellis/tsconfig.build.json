{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "lib",
        "baseUrl": ".",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "esnext",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "typeRoots": [
            "webpack-env",
            "src/library/src/types"
        ]
    },
    "include": [
        "./src/library/**/*",
        "main.ts"
    ],
    "exclude": [
        "./src/app",
        "./src/library/components/**/*",
        "./src/library/stories/**/*"
    ]
}
