{
    "compilerOptions": {
        "outDir": "lib",
        "baseUrl": ".",
        "declarationDir": "lib",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "esnext",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "webpack-env"
        ],
        "paths": {
            "react": [".sink.d.ts"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "node_modules"
    ]
}
