    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bin/deck",
            "runtimeArgs": ["selenium", "--debug"],
            "outputCapture": "std",
            "timeout": 20000,
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Watch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bin/deck",
            "runtimeArgs": ["selenium", "--debug", "-j='--watch'"],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "timeout": 20000,
            "port": 9229
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
        }
    ]
}